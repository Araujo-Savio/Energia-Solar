@model SolarEnergy.ViewModels.UserDeleteViewModel
@{
    ViewData["Title"] = "Excluir Usuário";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["BreadcrumbItems"] = new List<dynamic>
    {
        new { Title = "Usuários", Url = Url.Action("Users", "Admin"), IsActive = false },
        new { Title = "Excluir Usuário", Url = "", IsActive = true }
    };
}

<div class="container-fluid px-4 admin-fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 rounded-top-4 d-flex align-items-center">
                    <div class="icon-circle bg-danger text-white me-3">
                        <i class="fas fa-trash"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Confirmar Exclusão</h5>
                        <small class="text-muted">Esta ação não poderá ser desfeita</small>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Tem certeza de que deseja excluir este usuário?
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-3 text-muted">Nome</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3 text-muted">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Excluir Usuário
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
