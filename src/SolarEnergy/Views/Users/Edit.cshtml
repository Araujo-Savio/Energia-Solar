@model SolarEnergy.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Editar Usuário";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["BreadcrumbItems"] = new List<dynamic>
    {
        new { Title = "Usuários", Url = Url.Action("Users", "Admin"), IsActive = false },
        new { Title = "Editar Usuário", Url = "", IsActive = true }
    };
}

<div class="container-fluid px-4 admin-fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 rounded-top-4 d-flex align-items-center">
                    <div class="icon-circle bg-admin-primary text-white me-3">
                        <i class="fas fa-user-edit"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Editar Usuário</h5>
                        <small class="text-muted">Atualize as informações do usuário selecionado</small>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="Nome completo" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="email@dominio.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SelectedRole" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-user-shield"></i></span>
                                <select asp-for="SelectedRole" class="form-select">
                                    <option value="">Selecione um perfil</option>
                                    @foreach (var role in Model.AvailableRoles)
                                    {
                                        <option value="@role" selected="@(Model.SelectedRole == role)">@role</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="SelectedRole" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Voltar para lista
                            </a>
                            <button type="submit" class="btn btn-admin-primary px-4">
                                <i class="fas fa-save me-2"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
