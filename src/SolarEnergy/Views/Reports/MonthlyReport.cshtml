@{
    ViewData["Title"] = "Relatórios Mensais";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>📊Relatórios Mensais</h1>
            <p class="lead">Análise de desempenho do negócio</p>
        </div>
    </div>

    <!-- Métricas Principais -->
    <div class="row mt-4">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Leads Recebidos</h5>
                    <h2 class="card-text">45</h2>
                    <p class="card-text">+12% vs mês anterior</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Taxa de Conversão</h5>
                    <h2 class="card-text">28%</h2>
                    <p class="card-text">+5% vs mês anterior</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Faturamento</h5>
                    <h2 class="card-text">R$ 12.540</h2>
                    <p class="card-text">+18% vs mês anterior</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Avaliação Média</h5>
                    <h2 class="card-text">4.5 ⭐</h2>
                    <p class="card-text">Baseado em 28 avaliações</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico Simples -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Crescimento de Leads</h5>
                </div>
                <div class="card-body">
                    <div class="graph-container">
                        <div class="graph-bar" style="height: 60px; width: 80%; background: #4CAF50; margin: 10px 0;">
                            <span class="graph-label">Jan: 25 leads</span>
                        </div>
                        <div class="graph-bar" style="height: 80px; width: 80%; background: #2196F3; margin: 10px 0;">
                            <span class="graph-label">Fev: 35 leads</span>
                        </div>
                        <div class="graph-bar" style="height: 100px; width: 80%; background: #FF9800; margin: 10px 0;">
                            <span class="graph-label">Mar: 45 leads</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>