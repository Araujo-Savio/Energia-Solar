@model SolarEnergy.ViewModels.UserSettingsViewModel
@{
    ViewData["Title"] = "Configurações";
}

@section Styles {
    <link rel="stylesheet" href="~/css/settings.css" asp-append-version="true" />
}

<div class="settings-page">
    <div class="container">
        <!-- Header -->
        <div class="settings-header">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="fas fa-cog"></i>
                    Configurações
                </h1>
                <p class="page-subtitle">Gerencie segurança e preferências de notificação</p>
            </div>
        </div>

        <!-- Settings Navigation -->
        <div class="settings-nav">
            <nav class="nav nav-pills" id="settings-tab" role="tablist">
                <a class="nav-link active" id="security-tab" data-bs-toggle="pill" href="#security" role="tab" aria-controls="security" aria-selected="true">
                    <i class="fas fa-shield-alt"></i>
                    Segurança
                </a>
                <a class="nav-link" id="notifications-tab" data-bs-toggle="pill" href="#notifications" role="tab" aria-controls="notifications" aria-selected="false">
                    <i class="fas fa-bell"></i>
                    Notificações
                </a>
                @if (Model.UserType == SolarEnergy.Models.UserType.Company)
                {
                    <a class="nav-link" id="company-tab" data-bs-toggle="pill" href="#company" role="tab" aria-controls="company" aria-selected="false">
                        <i class="fas fa-building"></i>
                        Empresa
                    </a>
                }
            </nav>
        </div>

        <!-- Settings Content -->
        <div class="settings-content">
            <div class="tab-content" id="settings-tabContent">
                
                <!-- Security Tab -->
                <div class="tab-pane fade show active" id="security" role="tabpanel" aria-labelledby="security-tab">
                    <div class="settings-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-key"></i>
                                Alterar Senha
                            </h3>
                            <p class="card-description">Mantenha sua conta segura com uma senha forte</p>
                        </div>
                        
                        <div class="card-content">
                            <form asp-action="ChangePassword" method="post" class="settings-form">
                                <div class="form-group">
                                    <label for="CurrentPassword" class="form-label">Senha Atual</label>
                                    <input name="CurrentPassword" type="password" class="form-control" required />
                                </div>

                                <div class="form-group">
                                    <label for="NewPassword" class="form-label">Nova Senha</label>
                                    <input name="NewPassword" type="password" class="form-control" minlength="6" required />
                                    <small class="form-text">A senha deve ter pelo menos 6 caracteres</small>
                                </div>

                                <div class="form-group">
                                    <label for="ConfirmPassword" class="form-label">Confirmar Nova Senha</label>
                                    <input name="ConfirmPassword" type="password" class="form-control" required />
                                </div>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-shield-alt"></i>
                                        Alterar Senha
                                    </button>
                                </div>
                            </form>

                            <!-- Security Tips -->
                            <div class="security-tips">
                                <h4>Dicas de Segurança</h4>
                                <ul>
                                    <li><i class="fas fa-check"></i> Use pelo menos 8 caracteres</li>
                                    <li><i class="fas fa-check"></i> Combine letras maiúsculas e minúsculas</li>
                                    <li><i class="fas fa-check"></i> Inclua números e símbolos</li>
                                    <li><i class="fas fa-check"></i> Evite informações pessoais óbvias</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifications Tab -->
                <div class="tab-pane fade" id="notifications" role="tabpanel" aria-labelledby="notifications-tab">
                    <div class="settings-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-bell-slash"></i>
                                Preferências de Notificação
                            </h3>
                            <p class="card-description">Controle como e quando você recebe notificações</p>
                        </div>
                        
                        <div class="card-content">
                            <form asp-action="UpdateSettings" method="post" class="settings-form">
                                <input type="hidden" asp-for="UserId" />
                                <input type="hidden" asp-for="UserType" />
                                <input type="hidden" asp-for="FullName" />
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Phone" />
                                <input type="hidden" asp-for="Location" />
                                
                                <div class="notification-section">
                                    <h4>Notificações Gerais</h4>
                                    
                                    <div class="notification-item">
                                        <div class="notification-info">
                                            <h5>Notificações por Email</h5>
                                            <p>Receba atualizações importantes por email</p>
                                        </div>
                                        <div class="notification-toggle">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="EmailNotifications" />
                                                <span class="slider"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="notification-item">
                                        <div class="notification-info">
                                            <h5>Notificações por SMS</h5>
                                            <p>Receba alertas urgentes via SMS</p>
                                        </div>
                                        <div class="notification-toggle">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="SmsNotifications" />
                                                <span class="slider"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="notification-item">
                                        <div class="notification-info">
                                            <h5>Alertas de Segurança</h5>
                                            <p>Notificações sobre atividades da conta (recomendado)</p>
                                        </div>
                                        <div class="notification-toggle">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="SecurityAlerts" />
                                                <span class="slider"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="notification-section">
                                    <h4>Notificações de Negócios</h4>
                                    
                                    <div class="notification-item">
                                        <div class="notification-info">
                                            <h5>Propostas e Orçamentos</h5>
                                            <p>Seja notificado sobre novas propostas e atualizações</p>
                                        </div>
                                        <div class="notification-toggle">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="ProposalNotifications" />
                                                <span class="slider"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="notification-item">
                                        <div class="notification-info">
                                            <h5>Mensagens</h5>
                                            <p>Receba notificações de novas mensagens</p>
                                        </div>
                                        <div class="notification-toggle">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="MessageNotifications" />
                                                <span class="slider"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="notification-item">
                                        <div class="notification-info">
                                            <h5>Emails de Marketing</h5>
                                            <p>Receba dicas, novidades e ofertas especiais</p>
                                        </div>
                                        <div class="notification-toggle">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="MarketingEmails" />
                                                <span class="slider"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i>
                                        Salvar Preferências
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Company Tab (only for companies) -->
                @if (Model.UserType == SolarEnergy.Models.UserType.Company)
                {
                    <div class="tab-pane fade" id="company" role="tabpanel" aria-labelledby="company-tab">
                        <div class="settings-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-building"></i>
                                    Informações da Empresa
                                </h3>
                                <p class="card-description">Mantenha os dados da sua empresa atualizados</p>
                            </div>
                            
                            <div class="card-content">
                                <form asp-action="UpdateSettings" method="post" class="settings-form">
                                    <input type="hidden" asp-for="UserId" />
                                    <input type="hidden" asp-for="UserType" />
                                    <input type="hidden" asp-for="FullName" />
                                    <input type="hidden" asp-for="Email" />
                                    <input type="hidden" asp-for="Phone" />
                                    <input type="hidden" asp-for="Location" />
                                    <input type="hidden" asp-for="EmailNotifications" />
                                    <input type="hidden" asp-for="SmsNotifications" />
                                    <input type="hidden" asp-for="ProposalNotifications" />
                                    <input type="hidden" asp-for="MessageNotifications" />
                                    <input type="hidden" asp-for="MarketingEmails" />
                                    <input type="hidden" asp-for="SecurityAlerts" />
                                    
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="CompanyLegalName" class="form-label"></label>
                                            <input asp-for="CompanyLegalName" class="form-control" />
                                            <span asp-validation-for="CompanyLegalName" class="text-danger"></span>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label asp-for="CompanyTradeName" class="form-label"></label>
                                            <input asp-for="CompanyTradeName" class="form-control" />
                                            <span asp-validation-for="CompanyTradeName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="CompanyPhone" class="form-label"></label>
                                            <input asp-for="CompanyPhone" class="form-control" placeholder="(11) 3333-3333" />
                                            <span asp-validation-for="CompanyPhone" class="text-danger"></span>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label asp-for="CompanyWebsite" class="form-label"></label>
                                            <input asp-for="CompanyWebsite" class="form-control" placeholder="https://www.empresa.com.br" />
                                            <span asp-validation-for="CompanyWebsite" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ServiceType" class="form-label"></label>
                                        <select asp-for="ServiceType" class="form-control">
                                            <option value="">Selecione o tipo de serviço</option>
                                            <option value="@((int)SolarEnergy.Models.SolarServiceType.PanelSales)">Venda de Painéis Solares</option>
                                            <option value="@((int)SolarEnergy.Models.SolarServiceType.EnergyRental)">Aluguel de Energia Solar</option>
                                            <option value="@((int)SolarEnergy.Models.SolarServiceType.Both)">Venda e Aluguel</option>
                                        </select>
                                        <span asp-validation-for="ServiceType" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="CompanyDescription" class="form-label"></label>
                                        <textarea asp-for="CompanyDescription" class="form-control" rows="4" placeholder="Descreva os serviços e diferenciais da sua empresa..."></textarea>
                                        <span asp-validation-for="CompanyDescription" class="text-danger"></span>
                                        <small class="form-text">Esta descrição aparecerá no seu perfil público</small>
                                    </div>

                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i>
                                            Salvar Informações da Empresa
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Include validation scripts -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add some interactivity for better UX
        $(document).ready(function() {
            // Auto-save indication
            $('.settings-form').on('submit', function() {
                const $btn = $(this).find('button[type="submit"]');
                const originalText = $btn.html();
                $btn.html('<i class="fas fa-spinner fa-spin"></i> Salvando...');
                $btn.prop('disabled', true);
                
                setTimeout(function() {
                    $btn.html(originalText);
                    $btn.prop('disabled', false);
                }, 2000);
            });

            // Password strength indicator (basic)
            $('input[name="NewPassword"]').on('input', function() {
                const password = $(this).val();
                const strength = getPasswordStrength(password);
                // You could add a visual indicator here
            });

            function getPasswordStrength(password) {
                let score = 0;
                if (password.length >= 8) score++;
                if (/[a-z]/.test(password)) score++;
                if (/[A-Z]/.test(password)) score++;
                if (/[0-9]/.test(password)) score++;
                if (/[^A-Za-z0-9]/.test(password)) score++;
                return score;
            }
        });
    </script>
}