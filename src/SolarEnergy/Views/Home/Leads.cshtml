@model SolarEnergy.ViewModels.CompanyLeadsViewModel
@{
    ViewData["Title"] = "Central de Solicitações";
}

<!-- CSS personalizado -->
<link rel="stylesheet" href="~/css/leads.css" />

<div class="leads-page">
    <div class="container-fluid px-4 py-4">
        
        <!-- Header Professional -->
        <div class="leads-header">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <i class="fas fa-handshake" style="font-size: 2.5rem; opacity: 0.8;"></i>
                        </div>
                        <div>
                            <h1>Central de Solicitações</h1>
                            <p>Gerencie e responda às solicitações de orçamento dos seus clientes</p>
                        </div>
                    </div>
                    
                    <!-- Service Type Badges -->
                    <div class="d-flex flex-wrap gap-2">
                        @if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.PanelSales)
                        {
                            <span class="service-badge bg-primary">
                                <i class="fas fa-solar-panel"></i>
                                Venda de Painéis Solares
                            </span>
                        }
                        else if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.EnergyRental)
                        {
                            <span class="service-badge bg-success">
                                <i class="fas fa-leaf"></i>
                                Aluguel de Energia Solar
                            </span>
                        }
                        else if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.Both)
                        {
                            <span class="service-badge bg-primary">
                                <i class="fas fa-solar-panel"></i>
                                Venda de Painéis
                            </span>
                            <span class="service-badge bg-success">
                                <i class="fas fa-leaf"></i>
                                Aluguel de Energia
                            </span>
                        }
                    </div>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="d-flex flex-wrap gap-2 justify-content-lg-end justify-content-center mt-3 mt-lg-0">
                        <button class="btn btn-light btn-sm" onclick="window.print()">
                            <i class="fas fa-file-export me-1"></i>
                            Exportar
                        </button>
                        <button class="btn btn-light btn-sm" onclick="location.reload()">
                            <i class="fas fa-sync-alt me-1"></i>
                            Atualizar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Stats.Total</div>
                    <div class="stat-label">Total de Solicitações</div>
                </div>
            </div>
            
            <div class="stat-card stat-warning">
                <div class="stat-icon warning">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Stats.Novos</div>
                    <div class="stat-label">Aguardando Resposta</div>
                    @if (Model.Stats.Novos > 0)
                    {
                        <span class="stat-badge">Requer Atenção</span>
                    }
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon info">
                    <i class="fas fa-search-plus"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Stats.EmAnalise</div>
                    <div class="stat-label">Em Análise</div>
                </div>
            </div>
            
            <div class="stat-card stat-success">
                <div class="stat-icon success">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Stats.PropostasEnviadas</div>
                    <div class="stat-label">Propostas Enviadas</div>
                    <div class="stat-progress">
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width: @Model.Stats.ConversaoPercentual%"></div>
                        </div>
                        <small>@Model.Stats.ConversaoPercentual% de conversão</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="filters-card">
            <div class="card-body">
                <div class="row g-3 align-items-end">
                    <div class="col-lg-4">
                        <label class="form-label">
                            <i class="fas fa-search"></i>
                            Buscar Cliente
                        </label>
                        <input type="text" class="form-control" placeholder="Nome ou localização" id="searchInput">
                    </div>
                    <div class="col-lg-3">
                        <label class="form-label">
                            <i class="fas fa-filter"></i>
                            Status
                        </label>
                        <select class="form-select" id="statusFilter">
                            <option value="">Todos os Status</option>
                            <option value="Pendente">Pendente</option>
                            <option value="Em Análise">Em Análise</option>
                            <option value="Proposta Enviada">Proposta Enviada</option>
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <label class="form-label">
                            <i class="fas fa-cogs"></i>
                            Tipo de Serviço
                        </label>
                        <select class="form-select" id="serviceFilter">
                            <option value="">Todos os Serviços</option>
                            <option value="Venda de Painéis">Venda de Painéis</option>
                            <option value="Aluguel de Energia">Aluguel de Energia</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary btn-sm" onclick="clearFilters()" title="Limpar filtros">
                                <i class="fas fa-times"></i>
                            </button>
                            <button class="btn btn-primary btn-sm" onclick="applyFilters()" title="Aplicar filtros">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Leads Grid -->
        @if (Model.Quotes.Any())
        {
            <div class="leads-grid" id="leadsGrid">
                @foreach (var quote in Model.Quotes)
                {
                    <div class="lead-item" 
                         data-status="@quote.Status" 
                         data-service="@quote.ServiceType"
                         data-client="@quote.ClientName.ToLower()"
                         data-location="@quote.ClientLocation.ToLower()">
                        
                        <div class="lead-card @(quote.Status == "Pendente" ? "urgent" : quote.HasProposal ? "completed" : "in-progress")">
                            
                            <!-- Card Header -->
                            <div class="lead-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        @if (quote.Status == "Pendente")
                                        {
                                            <span class="priority-badge priority-urgent">
                                                <i class="fas fa-exclamation-circle"></i>
                                                Urgente
                                            </span>
                                        }
                                        else if (quote.Status == "Em Análise")
                                        {
                                            <span class="priority-badge priority-normal">
                                                <i class="fas fa-clock"></i>
                                                Em Análise
                                            </span>
                                        }
                                        else if (quote.HasProposal)
                                        {
                                            <span class="priority-badge priority-completed">
                                                <i class="fas fa-check-circle"></i>
                                                Concluído
                                            </span>
                                        }
                                    </div>
                                    <span class="lead-id">#@quote.QuoteId.ToString("D4")</span>
                                </div>
                            </div>

                            <!-- Client Section -->
                            <div class="client-section">
                                <!-- Client Info -->
                                <div class="client-info">
                                    <div class="client-avatar">
                                        @quote.ClientName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="client-details">
                                        <h5>@quote.ClientName</h5>
                                        <div class="client-meta">
                                            <div class="meta-item">
                                                <i class="fas fa-map-marker-alt"></i>
                                                @quote.ClientLocation
                                            </div>
                                            <div class="meta-item">
                                                <i class="fas fa-envelope"></i>
                                                @quote.ClientEmail
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Project Details -->
                                <div class="project-details">
                                    <div class="details-grid">
                                        <div class="detail-item">
                                            <div class="detail-icon primary">
                                                <i class="fas fa-bolt"></i>
                                            </div>
                                            <div class="detail-content">
                                                <div class="detail-label">Consumo Mensal</div>
                                                <div class="detail-value">@quote.MonthlyConsumptionKwh.ToString("N0") kWh</div>
                                            </div>
                                        </div>
                                        <div class="detail-item">
                                            <div class="detail-icon success">
                                                <i class="fas fa-cogs"></i>
                                            </div>
                                            <div class="detail-content">
                                                <div class="detail-label">Serviço</div>
                                                <div class="detail-value">@quote.ServiceType</div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(quote.Message))
                                    {
                                        <div class="client-message">
                                            <div class="client-message-text">
                                                @(quote.Message.Length > 120 ? quote.Message.Substring(0, 120) + "..." : quote.Message)
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Timeline -->
                            <div class="timeline-section">
                                <div class="timeline-item">
                                    <i class="fas fa-clock"></i>
                                    <span>Recebido @TimeAgo(quote.RequestDate)</span>
                                </div>
                                @if (quote.HasProposal)
                                {
                                    <div class="timeline-item timeline-success">
                                        <i class="fas fa-check"></i>
                                        <span>@quote.ProposalCount proposta(s) enviada(s)</span>
                                    </div>
                                }
                            </div>

                            <!-- Actions -->
                            <div class="actions-section">
                                <div class="action-buttons">
                                    <a asp-action="ViewQuoteDetails" asp-route-id="@quote.QuoteId" 
                                       class="btn-lead btn-lead-outline">
                                        <i class="fas fa-eye"></i>
                                        Detalhes
                                    </a>
                                    @if (!quote.HasProposal)
                                    {
                                        <button type="button" class="btn-lead btn-lead-orange"
                                                data-bs-toggle="modal" data-bs-target="#responseModal"
                                                data-quote-id="@quote.QuoteId" 
                                                data-client-name="@quote.ClientName"
                                                data-service-type="@quote.ServiceType">
                                            <i class="fas fa-reply"></i>
                                            Responder
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-lead btn-lead-success" disabled>
                                            <i class="fas fa-check"></i>
                                            Respondido
                                        </button>
                                    }
                                </div>
                                
                                <!-- Quick Actions -->
                                <div class="quick-actions">
                                    @if (!string.IsNullOrEmpty(quote.ClientPhone))
                                    {
                                        <a href="tel:@quote.ClientPhone" class="quick-action" title="Ligar">
                                            <i class="fas fa-phone"></i>
                                        </a>
                                    }
                                    <a href="mailto:@quote.ClientEmail" class="quick-action" title="E-mail">
                                        <i class="fas fa-envelope"></i>
                                    </a>
                                    <button class="quick-action" onclick="copyToClipboard('@quote.ClientEmail')" title="Copiar e-mail">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-inbox"></i>
                </div>
                <h3>Nenhuma solicitação ainda</h3>
                <p>
                    Quando clientes solicitarem orçamentos, eles aparecerão aqui de forma organizada.
                    Mantenha sua empresa ativa para receber mais leads!
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a asp-action="SearchCompanies" class="btn btn-outline-primary">
                        <i class="fas fa-eye me-2"></i>Ver Perfil Público
                    </a>
                    <a asp-action="Simulation" class="btn btn-primary">
                        <i class="fas fa-calculator me-2"></i>Usar Simulador
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Enhanced Response Modal -->
<div class="modal fade" id="responseModal" tabindex="-1" aria-labelledby="responseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="responseModalLabel">
                    <i class="fas fa-reply me-2"></i>Responder Solicitação
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SendCompanyResponse" method="post">
                <div class="modal-body">
                    <input type="hidden" name="QuoteId" id="modalQuoteId" />
                    
                    <!-- Client Info Banner -->
                    <div class="client-info-banner">
                        <div class="d-flex align-items-center">
                            <div class="client-avatar-modal me-3">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold">Cliente: <span id="modalClientName"></span></h6>
                                <small class="text-muted-custom">Serviço: <span id="modalServiceType"></span></small>
                            </div>
                        </div>
                    </div>

                    <!-- Response Type Selection -->
                    @if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.EnergyRental)
                    {
                        <input type="hidden" name="ResponseType" value="Message" />
                        <div class="mb-3">
                            <label for="Message" class="form-label">
                                <i class="fas fa-comment text-success me-1"></i>
                                Mensagem para o Cliente *
                            </label>
                            <textarea class="form-control" name="Message" rows="5" 
                                      placeholder="Digite sua mensagem personalizada..." required></textarea>
                            <div class="form-text">
                                <small class="text-muted-custom">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Seja cordial e profissional. Esta mensagem será enviada diretamente para o cliente.
                                </small>
                            </div>
                        </div>
                    }
                    else if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.PanelSales)
                    {
                        <input type="hidden" name="ResponseType" value="Proposal" />
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="Value" class="form-label">
                                    <i class="fas fa-dollar-sign text-success me-1"></i>
                                    Valor da Proposta (R$)
                                </label>
                                <input type="number" class="form-control" name="Value" step="0.01" min="0" placeholder="Ex: 25000,00">
                            </div>
                            <div class="col-md-6">
                                <label for="InstallationTimeframe" class="form-label">
                                    <i class="fas fa-calendar-alt text-primary me-1"></i>
                                    Prazo de Instalação (dias)
                                </label>
                                <input type="number" class="form-control" name="InstallationTimeframe" min="1" placeholder="Ex: 45">
                            </div>
                            <div class="col-md-6">
                                <label for="Warranty" class="form-label">
                                    <i class="fas fa-shield-alt text-info me-1"></i>
                                    Garantia (anos)
                                </label>
                                <input type="number" class="form-control" name="Warranty" min="1" placeholder="Ex: 25">
                            </div>
                            <div class="col-md-6">
                                <label for="EstimatedMonthlySavings" class="form-label">
                                    <i class="fas fa-piggy-bank text-warning me-1"></i>
                                    Economia Mensal (R$)
                                </label>
                                <input type="number" class="form-control" name="EstimatedMonthlySavings" step="0.01" min="0" placeholder="Ex: 450,00">
                            </div>
                            <div class="col-12">
                                <label for="ValidUntil" class="form-label">
                                    <i class="fas fa-hourglass-end text-danger me-1"></i>
                                    Válida Até
                                </label>
                                <input type="date" class="form-control" name="ValidUntil" 
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")"
                                       value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")">
                            </div>
                            <div class="col-12">
                                <label for="Description" class="form-label">
                                    <i class="fas fa-file-alt text-secondary me-1"></i>
                                    Descrição da Proposta
                                </label>
                                <textarea class="form-control" name="Description" rows="4" 
                                          placeholder="Descreva os detalhes técnicos, equipamentos inclusos, condições de pagamento..."></textarea>
                            </div>
                        </div>
                    }
                    else if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.Both)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tipo de Resposta</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="ResponseType" id="messageResponseBoth" value="Message" checked>
                                <label class="btn btn-outline-success" for="messageResponseBoth">
                                    <i class="fas fa-comment me-1"></i>Mensagem
                                </label>
                                <input type="radio" class="btn-check" name="ResponseType" id="proposalResponseBoth" value="Proposal">
                                <label class="btn btn-outline-primary" for="proposalResponseBoth">
                                    <i class="fas fa-file-contract me-1"></i>Proposta
                                </label>
                            </div>
                        </div>

                        <!-- Message Section -->
                        <div id="messageSection">
                            <div class="mb-3">
                                <label for="Message" class="form-label">Mensagem para o Cliente</label>
                                <textarea class="form-control" name="Message" rows="5" 
                                          placeholder="Digite sua mensagem personalizada..."></textarea>
                            </div>
                        </div>

                        <!-- Proposal Section -->
                        <div id="proposalSection" style="display: none;">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="Value" class="form-label">Valor da Proposta (R$)</label>
                                    <input type="number" class="form-control" name="Value" step="0.01" min="0">
                                </div>
                                <div class="col-md-6">
                                    <label for="InstallationTimeframe" class="form-label">Prazo de Instalação (dias)</label>
                                    <input type="number" class="form-control" name="InstallationTimeframe" min="1">
                                </div>
                                <div class="col-12">
                                    <label for="Description" class="form-label">Descrição da Proposta</label>
                                    <textarea class="form-control" name="Description" rows="4" 
                                              placeholder="Descreva os detalhes técnicos..."></textarea>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="modal-footer border-0 bg-light-custom">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn" style="background-color: var(--leads-orange); color: white;">
                        <i class="fas fa-paper-plane me-1"></i>Enviar Resposta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    private string TimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.Now - dateTime;
        if (timeSpan.TotalDays >= 1)
            return $"{(int)timeSpan.TotalDays} dia(s) atrás";
        if (timeSpan.TotalHours >= 1)
            return $"{(int)timeSpan.TotalHours}h atrás";
        if (timeSpan.TotalMinutes >= 1)
            return $"{(int)timeSpan.TotalMinutes}min atrás";
        return "agora";
    }
}

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Modal functionality
    const responseModal = document.getElementById('responseModal');
    if (responseModal) {
        responseModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const quoteId = button.getAttribute('data-quote-id');
            const clientName = button.getAttribute('data-client-name');
            const serviceType = button.getAttribute('data-service-type');
            
            document.getElementById('modalQuoteId').value = quoteId;
            document.getElementById('modalClientName').textContent = clientName;
            document.getElementById('modalServiceType').textContent = serviceType;
        });
    }

    // Toggle response sections for "Both" service type
    const responseTypeInputs = document.querySelectorAll('input[name="ResponseType"]');
    const messageSection = document.getElementById('messageSection');
    const proposalSection = document.getElementById('proposalSection');
    
    responseTypeInputs.forEach(input => {
        input.addEventListener('change', function() {
            if (messageSection && proposalSection) {
                if (this.value === 'Message') {
                    messageSection.style.display = 'block';
                    proposalSection.style.display = 'none';
                } else {
                    messageSection.style.display = 'none';
                    proposalSection.style.display = 'block';
                }
            }
        });
    });
});

// Filter functions
function applyFilters() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    const statusFilter = document.getElementById('statusFilter').value;
    const serviceFilter = document.getElementById('serviceFilter').value;
    
    const leadItems = document.querySelectorAll('.lead-item');
    
    leadItems.forEach(item => {
        const clientName = item.dataset.client;
        const location = item.dataset.location;
        const status = item.dataset.status;
        const service = item.dataset.service;
        
        let show = true;
        
        if (searchTerm && !clientName.includes(searchTerm) && !location.includes(searchTerm)) {
            show = false;
        }
        
        if (statusFilter && status !== statusFilter) {
            show = false;
        }
        
        if (serviceFilter && service !== serviceFilter) {
            show = false;
        }
        
        item.style.display = show ? 'block' : 'none';
    });
}

function clearFilters() {
    document.getElementById('searchInput').value = '';
    document.getElementById('statusFilter').value = '';
    document.getElementById('serviceFilter').value = '';
    applyFilters();
}

function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        // Pequeno feedback visual
        const button = event.target.closest('.quick-action');
        if (button) {
            const originalContent = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check text-success"></i>';
            setTimeout(() => {
                button.innerHTML = originalContent;
            }, 1000);
        }
    }).catch(function() {
        console.log('Erro ao copiar para a área de transferência');
    });
}

// Real-time search
document.getElementById('searchInput').addEventListener('input', applyFilters);
document.getElementById('statusFilter').addEventListener('change', applyFilters);
document.getElementById('serviceFilter').addEventListener('change', applyFilters);
</script>
