@model SolarEnergy.ViewModels.ClientDashboardViewModel
@{
    ViewData["Title"] = "Painel do Cliente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/client-dashboard.css" asp-append-version="true" />
}

<div class="client-dashboard">
    <div class="container">
        <!-- Header Section -->
        <div class="dashboard-header">
            <div class="header-content">
                <h1 class="dashboard-title">Bem-vindo, @Model.ClientName!</h1>
                <p class="dashboard-subtitle">Gerencie seus orçamentos de energia solar</p>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-file-invoice"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Statistics.TotalQuotes</h3>
                    <p class="stat-label">Orçamentos Solicitados</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon pending">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Statistics.PendingQuotes</h3>
                    <p class="stat-label">Pendentes</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon received">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Statistics.ReceivedQuotes</h3>
                    <p class="stat-label">Recebidos</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon accepted">
                    <i class="fas fa-handshake"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Statistics.AcceptedQuotes</h3>
                    <p class="stat-label">Aceitos</p>
                </div>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="dashboard-grid">
            <!-- Recent Activities -->
            <div class="dashboard-card activities-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-history"></i>
                        Atividades Recentes
                    </h2>
                </div>
                <div class="card-content">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="activities-list">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon @activity.IconColor">
                                        <i class="@activity.IconClass"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h4 class="activity-title">@activity.Title</h4>
                                        <p class="activity-description">@activity.Description</p>
                                        <span class="activity-time">@activity.GetTimeAgo()</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <p class="empty-title">Nenhuma atividade recente</p>
                            <p class="empty-description">Suas atividades aparecerão aqui</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Access -->
            <div class="dashboard-card quick-access-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-rocket"></i>
                        Acesso Rápido
                    </h2>
                </div>
                <div class="card-content">
                    <div class="quick-actions">
                        <a href="@Url.Action("Simulation", "Home")" class="quick-action-btn calculator">
                            <div class="action-icon">
                                <i class="fas fa-calculator"></i>
                            </div>
                            <div class="action-content">
                                <h4>Simulador</h4>
                                <p>Calcule economia</p>
                            </div>
                        </a>
                        
                        <a href="@Url.Action("SearchCompanies", "Home")" class="quick-action-btn search">
                            <div class="action-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <div class="action-content">
                                <h4>Buscar Empresas</h4>
                                <p>Encontre fornecedores</p>
                            </div>
                        </a>
                        
                        <a href="@Url.Action("MyQuotes", "Quote")" class="quick-action-btn quotes">
                            <div class="action-icon">
                                <i class="fas fa-list"></i>
                            </div>
                            <div class="action-content">
                                <h4>Meus Orçamentos</h4>
                                <p>Gerenciar solicitações</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Quotes Section -->
        <div class="dashboard-card quotes-card">
            <div class="card-header">
                <h2 class="card-title">
                    <i class="fas fa-file-invoice-dollar"></i>
                    Orçamentos Recentes
                </h2>
                <a href="@Url.Action("MyQuotes", "Quote")" class="view-all-link">
                    Ver Todos <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="card-content">
                @if (Model.RecentQuotes.Any())
                {
                    <div class="quotes-table">
                        <div class="table-header">
                            <div class="header-cell">Empresa</div>
                            <div class="header-cell">Status</div>
                            <div class="header-cell">Data</div>
                            <div class="header-cell">Ação</div>
                        </div>
                        
                        @foreach (var quote in Model.RecentQuotes)
                        {
                            <div class="table-row">
                                <div class="table-cell company-cell">
                                    <div class="company-info">
                                        <h4 class="company-name">@quote.CompanyName</h4>
                                        @if (quote.UnreadMessagesCount > 0)
                                        {
                                            <span class="message-indicator">
                                                <i class="fas fa-envelope"></i>
                                                @quote.UnreadMessagesCount nova(s) mensagem(ns)
                                            </span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="table-cell status-cell">
                                    @if (quote.Status == "Pendente")
                                    {
                                        <span class="status-badge pending">Pendente</span>
                                    }
                                    else if (quote.Status == "Respondido")
                                    {
                                        <span class="status-badge responded">Respondido</span>
                                    }
                                    else if (quote.Status == "Aceito")
                                    {
                                        <span class="status-badge accepted">Aceito</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge default">@quote.Status</span>
                                    }
                                </div>
                                
                                <div class="table-cell date-cell">
                                    <span class="date">@quote.RequestDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                
                                <div class="table-cell action-cell">
                                    <a href="@Url.Action("Details", "Quote", new { id = quote.QuoteId })" class="action-btn">
                                        <i class="fas fa-eye"></i>
                                        Ver
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-file-invoice"></i>
                        <h3 class="empty-title">Nenhum orçamento solicitado</h3>
                        <p class="empty-description">Comece buscando empresas e solicitando orçamentos</p>
                        <a href="@Url.Action("SearchCompanies", "Home")" class="empty-action-btn">
                            <i class="fas fa-search"></i>
                            Buscar Empresas
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
