@using SolarEnergy.ViewModels
@model SolarEnergy.ViewModels.CompanyDetailsViewModel
@{
    ViewData["Title"] = $"{Model.Name} - Detalhes da Empresa";
}

@section Styles {
    <link rel="stylesheet" href="~/css/company-details.css" />
}

<!-- Company Header Section -->
<section class="company-header-section position-relative">
    <div class="company-banner bg-gradient">
        <div class="container h-100 d-flex align-items-end pb-4">
            <div class="row w-100 align-items-end">
                <div class="col-auto">
                    @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                    {
                        <img src="@Model.ProfileImagePath" alt="@Model.Name" class="company-logo rounded shadow-lg">
                    }
                    else
                    {
                        <div class="company-logo-placeholder bg-white rounded shadow-lg d-flex align-items-center justify-content-center">
                            <i class="fas fa-building fa-3x text-solar-orange"></i>
                        </div>
                    }
                </div>
                <div class="col">
                    <h1 class="display-5 fw-bold text-white mb-2">@Model.Name</h1>
                    <div class="d-flex flex-wrap align-items-center text-white-50 mb-2">
                        @if (Model.TotalReviews > 0)
                        {
                            <div class="me-3 mb-2">
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(Model.AverageRating))
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else if (i <= Math.Ceiling(Model.AverageRating))
                                        {
                                            <i class="fas fa-star-half-alt"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    }
                                </span>
                                <span class="text-white ms-2">@Model.AverageRating.ToString("F1") (@Model.TotalReviews @(Model.TotalReviews == 1 ? "avaliação" : "avaliações"))</span>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Location))
                        {
                            <div class="me-3 mb-2">
                                <i class="fas fa-map-marker-alt me-1"></i>@Model.Location
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="company-details-main py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Sobre Nós Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent border-0 py-4">
                        <h3 class="text-solar-orange fw-bold mb-0">
                            <i class="fas fa-info-circle me-2"></i>Sobre Nós
                        </h3>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <p class="text-muted mb-4">@Model.Description</p>
                        }
                        else
                        {
                            <p class="text-muted mb-4">Esta empresa ainda não adicionou uma descrição detalhada. Entre em contato para mais informações sobre os serviços oferecidos.</p>
                        }

                        <div class="row">
                            @if (!string.IsNullOrWhiteSpace(Model.Website))
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-globe text-solar-orange me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Website</small>
                                            <a href="@Model.Website" target="_blank" class="text-decoration-none text-solar-blue fw-semibold">@Model.Website</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Phone))
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-phone text-solar-orange me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Telefone</small>
                                            <span class="fw-semibold text-solar-blue">@Model.Phone</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Avaliações Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent border-0 py-4">
                        <h3 class="text-solar-orange fw-bold mb-0">
                            <i class="fas fa-star me-2"></i>Avaliações
                        </h3>
                    </div>
                    <div class="card-body">
                        @if (Model.CanUserReview)
                        {
                            <!-- Formulário de Avaliação -->
                            <div class="bg-light rounded p-4 mb-4">
                                <h5 class="text-solar-blue fw-bold mb-3">Deixe sua avaliação</h5>
                                <form asp-action="AddReview" method="post">
                                    <input asp-for="@(new AddReviewViewModel().CompanyId)" type="hidden" value="@Model.Id" />
                                    
                                    @if (!Model.HasUserAlreadyRated)
                                    {
                                        <div class="mb-3">
                                            <label class="form-label">Sua avaliação</label>
                                            <div class="rating-input">
                                                <input type="radio" name="Rating" value="5" id="star5" />
                                                <label for="star5" title="5 estrelas"><i class="fas fa-star"></i></label>
                                                <input type="radio" name="Rating" value="4" id="star4" />
                                                <label for="star4" title="4 estrelas"><i class="fas fa-star"></i></label>
                                                <input type="radio" name="Rating" value="3" id="star3" />
                                                <label for="star3" title="3 estrelas"><i class="fas fa-star"></i></label>
                                                <input type="radio" name="Rating" value="2" id="star2" />
                                                <label for="star2" title="2 estrelas"><i class="fas fa-star"></i></label>
                                                <input type="radio" name="Rating" value="1" id="star1" />
                                                <label for="star1" title="1 estrela"><i class="fas fa-star"></i></label>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Você já avaliou esta empresa. Você pode adicionar novos comentários, mas não pode alterar sua nota.
                                        </div>
                                    }

                                    <div class="mb-3">
                                        <label for="Comment" class="form-label">Comentário</label>
                                        <textarea name="Comment" id="Comment" class="form-control" rows="3" placeholder="Compartilhe sua experiência com esta empresa..." required></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-solar-orange">
                                        <i class="fas fa-paper-plane me-2"></i>Enviar Avaliação
                                    </button>
                                </form>
                            </div>
                        }

                        <!-- Lista de Avaliações -->
                        @if (Model.Reviews.Any())
                        {
                            <div class="reviews-list">
                                @foreach (var review in Model.Reviews)
                                {
                                    <div class="review-item border-bottom pb-3 mb-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="fw-bold mb-1">@review.ReviewerName</h6>
                                                @if (review.Rating.HasValue)
                                                {
                                                    <div class="text-warning small">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= review.Rating.Value)
                                                            {
                                                                <i class="fas fa-star"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="far fa-star"></i>
                                                            }
                                                        }
                                                    </div>
                                                }
                                            </div>
                                            <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                        </div>
                                        <p class="text-muted mb-0">@review.Comment</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Nenhuma avaliação ainda</h5>
                                <p class="text-muted">Seja o primeiro a avaliar esta empresa!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 20px;">
                    <!-- Botão Solicitar Orçamento -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body text-center p-4">
                            @{
                                var userType = ViewData["UserType"] as SolarEnergy.Models.UserType?;
                                var isClient = userType == SolarEnergy.Models.UserType.Client;
                            }
                            
                            @if (isClient)
                            {
                                @if (Model.HasExistingQuote)
                                {
                                    <h5 class="text-solar-blue fw-bold mb-3">Orçamento Solicitado</h5>
                                    <p class="text-muted small mb-4">Você já possui um orçamento solicitado com esta empresa. Acompanhe o status e veja as propostas recebidas.</p>
                                    <a href="@Url.Action("Details", "Quote", new { id = Model.ExistingQuoteId })" class="btn btn-solar-orange btn-lg w-100">
                                        <i class="fas fa-eye me-2"></i>VER ORÇAMENTO SOLICITADO
                                    </a>
                                }
                                else
                                {
                                    <h5 class="text-solar-blue fw-bold mb-3">Interessado nos serviços?</h5>
                                    <p class="text-muted small mb-4">Solicite um orçamento personalizado e gratuito para seu projeto de energia solar.</p>
                                    <a href="@Url.Action("Request", "Quote", new { companyId = Model.Id })" class="btn btn-solar-orange btn-lg w-100">
                                        <i class="fas fa-file-signature me-2"></i>SOLICITAR ORÇAMENTO
                                    </a>
                                }
                            }
                            else
                            {
                                <h5 class="text-solar-blue fw-bold mb-3">Área Restrita</h5>
                                <p class="text-muted small mb-4">Apenas clientes podem solicitar orçamentos. Faça login como cliente para continuar.</p>
                                <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-solar-orange btn-lg w-100">
                                    <i class="fas fa-sign-in-alt me-2"></i>FAZER LOGIN
                                </a>
                            }
                        </div>
                    </div>

                    <!-- Informações Adicionais -->
                    @if (Model.TotalReviews > 0)
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h6 class="fw-bold text-solar-blue mb-3">
                                    <i class="fas fa-chart-bar me-2 text-solar-orange"></i>
                                    Resumo das Avaliações
                                </h6>
                                <div class="d-flex align-items-center justify-content-between mb-3 p-2 rounded" style="background: rgba(255, 107, 53, 0.05);">
                                    <span class="text-solar-blue fw-semibold">Avaliação Média</span>
                                    <span class="fw-bold text-solar-orange">@Model.AverageRating.ToString("F1")/5.0</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between p-2 rounded" style="background: rgba(255, 107, 53, 0.05);">
                                    <span class="text-solar-blue fw-semibold">Total de Avaliações</span>
                                    <span class="fw-bold text-solar-orange">@Model.TotalReviews</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.rating-input {
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
}

.rating-input input[type="radio"] {
    display: none;
}

.rating-input label {
    cursor: pointer;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ddd;
    transition: color 0.2s;
}

.rating-input label:hover,
.rating-input label:hover ~ label,
.rating-input input[type="radio"]:checked ~ label {
    color: #ffc107;
}

.company-header-section {
    margin-top: -56px;
    padding-top: 56px;
}

.review-item:last-child {
    border-bottom: none !important;
}
</style>