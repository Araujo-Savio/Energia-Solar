@model SolarEnergy.ViewModels.QuoteDetailForCompanyViewModel
@{
    ViewData["Title"] = $"Detalhes da Solicitação - {Model.ClientName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mb-3">
                    <li class="breadcrumb-item">
                        <a asp-action="Leads" class="text-solar-orange text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Voltar às Solicitações
                        </a>
                    </li>
                    <li class="breadcrumb-item active text-muted" aria-current="page">Detalhes</li>
                </ol>
            </nav>

            <!-- Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-solar-blue text-white py-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="mb-1">
                                <i class="fas fa-file-invoice me-2"></i>
                                Solicitação #@Model.QuoteId.ToString("D6")
                            </h4>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-user me-1"></i>
                                @Model.ClientName
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            @if (Model.Status == "Pendente")
                            {
                                <span class="badge bg-warning text-dark px-3 py-2 fs-6">Novo</span>
                            }
                            else if (Model.Status == "Em Análise")
                            {
                                <span class="badge bg-info px-3 py-2 fs-6">Em Análise</span>
                            }
                            else if (Model.HasProposal)
                            {
                                <span class="badge bg-success px-3 py-2 fs-6">Proposta Enviada</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2 fs-6">@Model.Status</span>
                            }
                            <div class="small opacity-75 mt-1">
                                <i class="fas fa-calendar me-1"></i>
                                @Model.RequestDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Informações do Cliente -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="text-solar-blue fw-bold mb-0">
                                <i class="fas fa-user-circle me-2 text-solar-orange"></i>
                                Informações do Cliente
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="info-card p-3 rounded bg-light border-start border-solar-orange border-4">
                                        <h6 class="text-solar-blue fw-bold mb-2">
                                            <i class="fas fa-user me-2"></i>Nome Completo
                                        </h6>
                                        <p class="mb-0">@Model.ClientName</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="info-card p-3 rounded bg-light border-start border-solar-orange border-4">
                                        <h6 class="text-solar-blue fw-bold mb-2">
                                            <i class="fas fa-envelope me-2"></i>E-mail
                                        </h6>
                                        <p class="mb-0">
                                            <a href="mailto:@Model.ClientEmail" class="text-decoration-none">
                                                @Model.ClientEmail
                                            </a>
                                        </p>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ClientPhone))
                                {
                                    <div class="col-md-6 mb-4">
                                        <div class="info-card p-3 rounded bg-light border-start border-solar-orange border-4">
                                            <h6 class="text-solar-blue fw-bold mb-2">
                                                <i class="fas fa-phone me-2"></i>Telefone
                                            </h6>
                                            <p class="mb-0">
                                                <a href="tel:@Model.ClientPhone" class="text-decoration-none">
                                                    @Model.ClientPhone
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                }
                                <div class="col-md-6 mb-4">
                                    <div class="info-card p-3 rounded bg-light border-start border-solar-orange border-4">
                                        <h6 class="text-solar-blue fw-bold mb-2">
                                            <i class="fas fa-map-marker-alt me-2"></i>Localização
                                        </h6>
                                        <p class="mb-0">@Model.ClientLocation</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Detalhes da Solicitação -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="text-solar-blue fw-bold mb-0">
                                <i class="fas fa-solar-panel me-2 text-solar-orange"></i>
                                Detalhes da Solicitação
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="info-card p-3 rounded bg-light border-start border-info border-4">
                                        <h6 class="text-info fw-bold mb-2">
                                            <i class="fas fa-bolt me-2"></i>Consumo Mensal
                                        </h6>
                                        <p class="fs-4 fw-bold text-info mb-0">
                                            @Model.MonthlyConsumptionKwh.ToString("N0") <small class="fs-6 text-muted">kWh</small>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="info-card p-3 rounded bg-light border-start border-success border-4">
                                        <h6 class="text-success fw-bold mb-2">
                                            <i class="fas fa-cogs me-2"></i>Tipo de Serviço
                                        </h6>
                                        <p class="fw-bold text-success mb-0">@Model.ServiceType</p>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Message))
                            {
                                <div class="mb-3">
                                    <div class="info-card p-3 rounded bg-light border-start border-warning border-4">
                                        <h6 class="text-warning fw-bold mb-2">
                                            <i class="fas fa-comment me-2"></i>Mensagem do Cliente
                                        </h6>
                                        <p class="text-secondary mb-0 lh-base">@Model.Message</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Propostas Enviadas -->
                    @if (Model.HasProposal)
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent border-0 py-3">
                                <h5 class="text-solar-blue fw-bold mb-0">
                                    <i class="fas fa-file-contract me-2 text-solar-orange"></i>
                                    Propostas Enviadas
                                    <span class="badge bg-success ms-2">@Model.Proposals.Count</span>
                                </h5>
                            </div>
                            <div class="card-body">
                                @foreach (var proposal in Model.Proposals.OrderByDescending(p => p.ProposalDate))
                                {
                                    <div class="proposal-card border rounded p-4 mb-3">
                                        <div class="row">
                                            <div class="col-md-4 mb-3">
                                                <div class="text-center p-3 bg-success bg-opacity-10 rounded">
                                                    <h3 class="text-success fw-bold mb-1">
                                                        @proposal.Value.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                                                    </h3>
                                                    <small class="text-muted">Valor da Proposta</small>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="row">
                                                    @if (proposal.InstallationTimeframe.HasValue)
                                                    {
                                                        <div class="col-6 mb-2">
                                                            <small class="text-muted d-block">Prazo</small>
                                                            <strong>@proposal.InstallationTimeframe dias</strong>
                                                        </div>
                                                    }
                                                    @if (proposal.Warranty.HasValue)
                                                    {
                                                        <div class="col-6 mb-2">
                                                            <small class="text-muted d-block">Garantia</small>
                                                            <strong>@proposal.Warranty anos</strong>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(proposal.Description))
                                        {
                                            <div class="mt-3 pt-3 border-top">
                                                <p class="text-muted mb-0">@proposal.Description</p>
                                            </div>
                                        }
                                        <div class="mt-3 pt-3 border-top text-muted small">
                                            <i class="fas fa-clock me-1"></i>
                                            Enviada em @proposal.ProposalDate.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="sticky-top" style="top: 20px;">
                        <!-- Ações -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-transparent border-0 py-3">
                                <h6 class="text-solar-blue fw-bold mb-0">
                                    <i class="fas fa-tasks me-2 text-solar-orange"></i>
                                    Ações Disponíveis
                                </h6>
                            </div>
                            <div class="card-body">
                                @if (!Model.HasProposal)
                                {
                                    <div class="d-grid gap-2">
                                        <button type="button" class="btn btn-solar-orange"
                                                data-bs-toggle="modal" data-bs-target="#responseModal"
                                                data-quote-id="@Model.QuoteId" 
                                                data-client-name="@Model.ClientName"
                                                data-service-type="@Model.ServiceType">
                                            <i class="fas fa-reply me-2"></i>Responder Cliente
                                        </button>
                                        
                                        @if (!string.IsNullOrEmpty(Model.ClientEmail))
                                        {
                                            <a href="mailto:@Model.ClientEmail" class="btn btn-outline-primary">
                                                <i class="fas fa-envelope me-2"></i>Enviar E-mail
                                            </a>
                                        }
                                        
                                        @if (!string.IsNullOrEmpty(Model.ClientPhone))
                                        {
                                            <a href="tel:@Model.ClientPhone" class="btn btn-outline-success">
                                                <i class="fas fa-phone me-2"></i>Ligar
                                            </a>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-success border-0">
                                        <i class="fas fa-check-circle me-2"></i>
                                        <strong>Proposta enviada!</strong><br>
                                        Aguarde a resposta do cliente.
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Informações Adicionais -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent border-0 py-3">
                                <h6 class="text-solar-blue fw-bold mb-0">
                                    <i class="fas fa-info-circle me-2 text-solar-orange"></i>
                                    Informações do Projeto
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <small class="text-muted d-block">Tipo de Empresa</small>
                                    @if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.PanelSales)
                                    {
                                        <span class="badge bg-primary">Venda de Painéis</span>
                                    }
                                    else if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.EnergyRental)
                                    {
                                        <span class="badge bg-success">Aluguel de Energia</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Ambos os Serviços</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted d-block">Consumo Médio</small>
                                    <strong>@Model.MonthlyConsumptionKwh kWh/mês</strong>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Recebido em</small>
                                    <strong>@Model.RequestDate.ToString("dd/MM/yyyy HH:mm")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Resposta (igual ao da view Leads) -->
<div class="modal fade" id="responseModal" tabindex="-1" aria-labelledby="responseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="responseModalLabel">
                    <i class="fas fa-reply me-2"></i>Responder Solicitação
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="SendCompanyResponse" method="post">
                <div class="modal-body">
                    <input type="hidden" name="QuoteId" id="modalQuoteId" value="@Model.QuoteId" />
                    
                    <div class="mb-3">
                        <strong>Cliente: </strong>@Model.ClientName<br>
                        <strong>Serviço: </strong>@Model.ServiceType
                    </div>

                    <!-- Aqui você pode adicionar o resto do formulário baseado no tipo de empresa -->
                    @if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.EnergyRental)
                    {
                        <input type="hidden" name="ResponseType" value="Message" />
                        <div class="mb-3">
                            <label for="Message" class="form-label">Mensagem para o Cliente</label>
                            <textarea class="form-control" name="Message" rows="4" 
                                      placeholder="Digite sua mensagem para o cliente..." required></textarea>
                        </div>
                    }
                    @if (Model.CompanyServiceType == SolarEnergy.Models.SolarServiceType.PanelSales)
                    {
                        <input type="hidden" name="ResponseType" value="Proposal" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Value" class="form-label">Valor da Proposta (R$)</label>
                                <input type="number" class="form-control" name="Value" step="0.01" min="0" 
                                       placeholder="0,00" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="InstallationTimeframe" class="form-label">Prazo de Instalação (dias)</label>
                                <input type="number" class="form-control" name="InstallationTimeframe" min="1" 
                                       placeholder="Ex: 30">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="Description" class="form-label">Descrição da Proposta</label>
                            <textarea class="form-control" name="Description" rows="4" 
                                      placeholder="Descreva os detalhes da proposta..."></textarea>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-solar-orange">
                        <i class="fas fa-paper-plane me-1"></i>Enviar Resposta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const responseModal = document.getElementById('responseModal');
    if (responseModal) {
        responseModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            if (button) {
                const quoteId = button.getAttribute('data-quote-id');
                if (quoteId) {
                    document.getElementById('modalQuoteId').value = quoteId;
                }
            }
        });
    }
});
</script>