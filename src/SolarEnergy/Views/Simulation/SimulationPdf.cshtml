@model SolarEnergy.ViewModels.SimulationPdfViewModel
@using System.Globalization
@{ 
    Layout = null;
    var ptBr = new CultureInfo("pt-BR");
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Simulação de Economia - Resultado</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 24px; }
        h1 { text-align: center; margin-bottom: 12px; }
        p { margin: 4px 0; }
        table { width: 100%; border-collapse: collapse; margin-top: 12px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background: #f5f5f5; }
    </style>
</head>
<body>
    <h1>Simulação de Economia - Resultado</h1>

    <p>
        Empresa selecionada: @Model.SelectedCompanyName
    </p>

    @if (!Model.IsCompanyUser && Model.UserInput is not null && Model.UserResult is not null)
    {
        <p>
            Consumo médio: @Model.UserInput.AverageMonthlyConsumptionKwh.ToString("N0", ptBr) kWh |
            Tarifa: @Model.UserInput.TariffPerKwh.ToString("C", ptBr) |
            Cobertura: @Model.UserInput.CoveragePercent.ToString("N2", ptBr)% |
            Horizonte: @Model.UserInput.HorizonYears anos
        </p>

        <table>
            <thead>
                <tr>
                    <th>Métrica</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Custo sem energia solar</td>
                    <td>@Model.UserResult.CostWithoutSolar.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Investimento com instalação</td>
                    <td>@Model.UserResult.InstallationInvestment.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Custo com aluguel</td>
                    <td>@Model.UserResult.RentCost.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com instalação</td>
                    <td>@Model.UserResult.InstallationSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com aluguel</td>
                    <td>@Model.UserResult.RentSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Energia gerada anualmente (kWh)</td>
                    <td>@Model.UserResult.AnnualGeneratedEnergyKwh.ToString("N2", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia média anual</td>
                    <td>@Model.UserResult.AverageAnnualSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (instalação)</td>
                    <td>@Model.UserResult.MonthlySavingInstallation.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (aluguel)</td>
                    <td>@Model.UserResult.MonthlySavingRent.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Payback estimado</td>
                    <td>@(Model.UserResult.PaybackYears.HasValue ? $"{Model.UserResult.PaybackYears.Value.ToString("N2", ptBr)} anos" : "Não recupera investimento")</td>
                </tr>
                <tr>
                    <td>Tempo de instalação</td>
                    <td>@Model.UserResult.InstallationTimeMonths.ToString("N1", ptBr) meses</td>
                </tr>
                <tr>
                    <td>Mensalidade de aluguel inicial</td>
                    <td>@Model.UserResult.InitialRentAmount.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Desconto aplicado na conta</td>
                    <td>@Model.UserResult.DiscountAppliedPercent.ToString("N2", ptBr)%</td>
                </tr>
                <tr>
                    <td>Economia acumulada em 5 anos</td>
                    <td>@Model.UserResult.FiveYearAccumulatedSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Horizonte analisado</td>
                    <td>@Model.UserResult.AnalyzedHorizonYears anos</td>
                </tr>
                <tr>
                    <td>Cobertura considerada</td>
                    <td>@Model.UserResult.CoveragePercent.ToString("N2", ptBr)%</td>
                </tr>
            </tbody>
        </table>
    }
    else if (Model.IsCompanyUser && Model.CompanyInput is not null && Model.CompanyResult is not null)
    {
        <p>
            Consumo médio: @Model.CompanyInput.AverageMonthlyConsumptionKwh.ToString("N0", ptBr) kWh |
            Tarifa: @Model.CompanyInput.TariffPerKwh.ToString("C", ptBr) |
            Cobertura: @Model.CompanyInput.CoveragePercent.ToString("N2", ptBr)% |
            Horizonte: @Model.CompanyInput.HorizonYears anos
        </p>

        <table>
            <thead>
                <tr>
                    <th>Métrica</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Custo sem energia solar</td>
                    <td>@Model.CompanyResult.CostWithoutSolar.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Investimento com instalação</td>
                    <td>@Model.CompanyResult.InstallationInvestment.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Custo com aluguel</td>
                    <td>@Model.CompanyResult.RentCost.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com instalação</td>
                    <td>@Model.CompanyResult.InstallationSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com aluguel</td>
                    <td>@Model.CompanyResult.RentSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Energia gerada anualmente (kWh)</td>
                    <td>@Model.CompanyResult.AnnualGeneratedEnergyKwh.ToString("N2", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia média anual</td>
                    <td>@Model.CompanyResult.AverageAnnualSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (instalação)</td>
                    <td>@Model.CompanyResult.MonthlySavingInstallation.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (aluguel)</td>
                    <td>@Model.CompanyResult.MonthlySavingRent.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Payback estimado</td>
                    <td>@(Model.CompanyResult.PaybackYears.HasValue ? $"{Model.CompanyResult.PaybackYears.Value.ToString("N2", ptBr)} anos" : "Não recupera investimento")</td>
                </tr>
                <tr>
                    <td>Tempo de instalação</td>
                    <td>@Model.CompanyResult.InstallationTimeMonths.ToString("N1", ptBr) meses</td>
                </tr>
                <tr>
                    <td>Mensalidade de aluguel inicial</td>
                    <td>@Model.CompanyResult.InitialRentAmount.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Desconto aplicado na conta</td>
                    <td>@Model.CompanyResult.DiscountAppliedPercent.ToString("N2", ptBr)%</td>
                </tr>
                <tr>
                    <td>Economia acumulada em 5 anos</td>
                    <td>@Model.CompanyResult.FiveYearAccumulatedSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Horizonte analisado</td>
                    <td>@Model.CompanyResult.AnalyzedHorizonYears anos</td>
                </tr>
                <tr>
                    <td>Cobertura considerada</td>
                    <td>@Model.CompanyResult.CoveragePercent.ToString("N2", ptBr)%</td>
                </tr>
            </tbody>
        </table>
    }
</body>
</html>
