@model SolarEnergy.ViewModels.SimulationPdfViewModel
@using System.Globalization
@{
    var ptBr = new CultureInfo("pt-BR");
    var isCompanyUser = Model.IsCompanyUser;
    var userInput = Model.UserInput;
    var userResult = Model.UserResult;
    var companyInput = Model.CompanyInput;
    var companyResult = Model.CompanyResult;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Simulação de Economia - Resultado</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 24px; }
        h1 { text-align: center; margin-bottom: 12px; }
        p { margin: 4px 0; }
        table { width: 100%; border-collapse: collapse; margin-top: 12px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background: #f5f5f5; }
    </style>
</head>
<body>
    <h1>Simulação de Economia - Resultado</h1>

    @if (!string.IsNullOrWhiteSpace(Model.SelectedCompanyName))
    {
        <p>Empresa selecionada: @Model.SelectedCompanyName</p>
    }

    @if (!isCompanyUser && userInput is not null && userResult is not null)
    {
        <p>
            Consumo médio: @userInput.AverageMonthlyConsumptionKwh.ToString("N0", ptBr) kWh |
            Tarifa: @userInput.TariffPerKwh.ToString("C", ptBr) |
            Cobertura: @userInput.CoveragePercent.ToString("N2", ptBr)% |
            Horizonte: @userInput.HorizonYears anos
        </p>

        <table>
            <thead>
                <tr>
                    <th>Métrica</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Custo sem energia solar</td>
                    <td>@userResult.CostWithoutSolar.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Investimento com instalação</td>
                    <td>@userResult.InstallationInvestment.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Custo com aluguel</td>
                    <td>@userResult.RentCost.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com instalação</td>
                    <td>@userResult.InstallationSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com aluguel</td>
                    <td>@userResult.RentSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Energia gerada anualmente (kWh)</td>
                    <td>@userResult.AnnualGeneratedEnergyKwh.ToString("N2", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia média anual</td>
                    <td>@userResult.AverageAnnualSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (instalação)</td>
                    <td>@userResult.MonthlySavingInstallation.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (aluguel)</td>
                    <td>@userResult.MonthlySavingRent.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Payback estimado</td>
                    <td>@(userResult.PaybackYears.HasValue ? $"{userResult.PaybackYears.Value.ToString("N2", ptBr)} anos" : "Não recupera investimento")</td>
                </tr>
                <tr>
                    <td>Tempo de instalação</td>
                    <td>@userResult.InstallationTimeMonths.ToString("N1", ptBr) meses</td>
                </tr>
                <tr>
                    <td>Mensalidade de aluguel inicial</td>
                    <td>@userResult.InitialRentAmount.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Desconto aplicado na conta</td>
                    <td>@userResult.DiscountAppliedPercent.ToString("N2", ptBr)%</td>
                </tr>
                <tr>
                    <td>Economia acumulada em 5 anos</td>
                    <td>@userResult.FiveYearAccumulatedSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Horizonte analisado</td>
                    <td>@userResult.AnalyzedHorizonYears anos</td>
                </tr>
                <tr>
                    <td>Cobertura considerada</td>
                    <td>@userResult.CoveragePercent.ToString("N2", ptBr)%</td>
                </tr>
            </tbody>
        </table>
    }
    else if (isCompanyUser && companyInput is not null && companyResult is not null)
    {
        <p>
            Consumo médio: @companyInput.AverageMonthlyConsumptionKwh.ToString("N0", ptBr) kWh |
            Tarifa: @companyInput.TariffPerKwh.ToString("C", ptBr) |
            Cobertura: @companyInput.CoveragePercent.ToString("N2", ptBr)% |
            Horizonte: @companyInput.HorizonYears anos
        </p>

        <table>
            <thead>
                <tr>
                    <th>Métrica</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Custo sem energia solar</td>
                    <td>@companyResult.CostWithoutSolar.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Investimento com instalação</td>
                    <td>@companyResult.InstallationInvestment.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Custo com aluguel</td>
                    <td>@companyResult.RentCost.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com instalação</td>
                    <td>@companyResult.InstallationSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia com aluguel</td>
                    <td>@companyResult.RentSavings.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Energia gerada anualmente (kWh)</td>
                    <td>@companyResult.AnnualGeneratedEnergyKwh.ToString("N2", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia média anual</td>
                    <td>@companyResult.AverageAnnualSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (instalação)</td>
                    <td>@companyResult.MonthlySavingInstallation.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Economia mensal (aluguel)</td>
                    <td>@companyResult.MonthlySavingRent.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Payback estimado</td>
                    <td>@(companyResult.PaybackYears.HasValue ? $"{companyResult.PaybackYears.Value.ToString("N2", ptBr)} anos" : "Não recupera investimento")</td>
                </tr>
                <tr>
                    <td>Tempo de instalação</td>
                    <td>@companyResult.InstallationTimeMonths.ToString("N1", ptBr) meses</td>
                </tr>
                <tr>
                    <td>Mensalidade de aluguel inicial</td>
                    <td>@companyResult.InitialRentAmount.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Desconto aplicado na conta</td>
                    <td>@companyResult.DiscountAppliedPercent.ToString("N2", ptBr)%</td>
                </tr>
                <tr>
                    <td>Economia acumulada em 5 anos</td>
                    <td>@companyResult.FiveYearAccumulatedSaving.ToString("C", ptBr)</td>
                </tr>
                <tr>
                    <td>Horizonte analisado</td>
                    <td>@companyResult.AnalyzedHorizonYears anos</td>
                </tr>
                <tr>
                    <td>Cobertura considerada</td>
                    <td>@companyResult.CoveragePercent.ToString("N2", ptBr)%</td>
                </tr>
            </tbody>
        </table>
    }
</body>
</html>
