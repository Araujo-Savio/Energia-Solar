@model SolarEnergy.ViewModels.TechnicalVisitListViewModel
@using SolarEnergy.Models
@using System.Linq
@{
    ViewData["Title"] = "Agendamentos";
    string StatusBadge(TechnicalVisitStatus status) => status switch
    {
        TechnicalVisitStatus.Pending => "status-badge status-pending",
        TechnicalVisitStatus.Confirmed => "status-badge status-confirmed",
        TechnicalVisitStatus.Done => "status-badge status-done",
        _ => "status-badge"
    };
    string StatusLabel(TechnicalVisitStatus status) => status switch
    {
        TechnicalVisitStatus.Pending => "Pendente",
        TechnicalVisitStatus.Confirmed => "Confirmada",
        TechnicalVisitStatus.Done => "Concluída",
        _ => status.ToString()
    };
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0 schedule-card">
                <div class="card-header schedule-card-header d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div class="d-flex align-items-center mb-3 mb-md-0">
                        <div class="icon-wrapper me-3">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div>
                            <h3 class="mb-1">Agendamentos de Visitas Técnicas</h3>
                            <p class="mb-0 text-muted">Visualize e filtre todos os agendamentos criados.</p>
                        </div>
                    </div>
                    <a asp-action="Index" class="btn btn-solar-orange">
                        <i class="fas fa-plus-circle me-2"></i>Novo Agendamento
                    </a>
                </div>
                <div class="card-body p-4">
                    <form method="get" class="row g-3 schedule-filter mb-4">
                        <div class="col-md-3">
                            <label asp-for="VisitDate" class="form-label"></label>
                            <input asp-for="VisitDate" class="form-control" type="date" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="CompanyId" class="form-label"></label>
                            <select asp-for="CompanyId" class="form-select" asp-items="Model.CompanyOptions"></select>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ClientId" class="form-label"></label>
                            <select asp-for="ClientId" class="form-select" asp-items="Model.ClientOptions"></select>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Model.StatusOptions"></select>
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-schedule-primary w-100">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Empresa</th>
                                    <th>Cliente</th>
                                    <th>Serviço</th>
                                    <th class="text-center">Data</th>
                                    <th class="text-center">Hora</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Visits.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-5 text-muted">
                                            <i class="fas fa-calendar-times fa-2x mb-3"></i>
                                            <div>Nenhum agendamento encontrado para os filtros selecionados.</div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var visit in Model.Visits)
                                    {
                                        <tr>
                                            <td>@visit.CompanyName</td>
                                            <td>@visit.ClientName</td>
                                            <td>@visit.ServiceType</td>
                                            <td class="text-center">@visit.VisitDate:dd/MM/yyyy</td>
                                            <td class="text-center">@visit.VisitTime.ToString("hh\:mm")</td>
                                            <td class="text-center">
                                                <span class="@StatusBadge(visit.Status)">@StatusLabel(visit.Status)</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-2">
                                                    <button type="button" class="btn btn-sm btn-outline-primary disabled" title="Em breve">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger disabled" title="Em breve">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="text-muted">
                            Exibindo @Model.Visits.Count() de @Model.TotalItems registros
                        </div>
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="List" asp-route-page="@(Model.PageNumber - 1)"
                                       asp-route-visitDate="@Model.VisitDate?.ToString("yyyy-MM-dd")"
                                       asp-route-companyId="@Model.CompanyId"
                                       asp-route-clientId="@Model.ClientId"
                                       asp-route-status="@Model.Status?.ToString()">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                @for (var page = 1; page <= Model.TotalPages; page++)
                                {
                                    <li class="page-item @(page == Model.PageNumber ? "active" : string.Empty)">
                                        <a class="page-link" asp-action="List" asp-route-page="@page"
                                           asp-route-visitDate="@Model.VisitDate?.ToString("yyyy-MM-dd")"
                                           asp-route-companyId="@Model.CompanyId"
                                           asp-route-clientId="@Model.ClientId"
                                           asp-route-status="@Model.Status?.ToString()">@page</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="List" asp-route-page="@(Model.PageNumber + 1)"
                                       asp-route-visitDate="@Model.VisitDate?.ToString("yyyy-MM-dd")"
                                       asp-route-companyId="@Model.CompanyId"
                                       asp-route-clientId="@Model.ClientId"
                                       asp-route-status="@Model.Status?.ToString()">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
