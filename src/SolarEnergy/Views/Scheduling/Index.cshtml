@model SolarEnergy.ViewModels.ScheduleVisitViewModel
@{
    ViewData["Title"] = "Agendamento de Visita Técnica";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 schedule-card">
                <div class="card-header schedule-card-header d-flex align-items-center">
                    <div class="icon-wrapper me-3">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div>
                        <h3 class="mb-1">Agendar Visita Técnica</h3>
                        <p class="mb-0 text-muted">Defina a empresa, cliente e horário para a visita técnica.</p>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="row g-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="col-md-6">
                            <label asp-for="CompanyId" class="form-label"></label>
                            <select asp-for="CompanyId" class="form-select" asp-items="Model.Companies">
                                <option value="">Selecione uma empresa</option>
                            </select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ClientId" class="form-label"></label>
                            <select asp-for="ClientId" class="form-select" asp-items="Model.Clients">
                                <option value="">Selecione um cliente</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ServiceType" class="form-label"></label>
                            <input asp-for="ServiceType" class="form-control" placeholder="Ex.: Instalação residencial" />
                            <span asp-validation-for="ServiceType" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="VisitDate" class="form-label"></label>
                            <input asp-for="VisitDate" class="form-control" type="date" />
                            <span asp-validation-for="VisitDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="VisitTime" class="form-label"></label>
                            <input asp-for="VisitTime" class="form-control" type="time" />
                            <span asp-validation-for="VisitTime" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" placeholder="Rua, número, bairro, cidade" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Observações adicionais (opcional)"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-flex justify-content-between align-items-center pt-3">
                            <div>
                                <a asp-action="List" class="btn btn-outline-secondary">
                                    <i class="fas fa-list me-2"></i>Ver Agendamentos
                                </a>
                            </div>
                            <button type="submit" class="btn btn-solar-orange px-4">
                                <i class="fas fa-paper-plane me-2"></i>Agendar Visita
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
