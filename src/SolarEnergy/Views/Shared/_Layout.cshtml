<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Solar Energy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SolarEnergy.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? string.Empty;
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? string.Empty;
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
    
    var isSimulationActive = (currentController == "Home" && currentAction == "Simulation") || currentController == "Simulation";
                                    <a class="nav-link nav-link-enhanced @(isSimulationActive ? "active" : string.Empty)" asp-controller="Simulation" asp-action="Index">
                                    <a class="nav-link nav-link-enhanced @(isSimulationActive ? "active" : string.Empty)" asp-controller="Simulation" asp-action="Index">
                                    <a class="nav-link nav-link-enhanced @(isSimulationActive ? "active" : string.Empty)" asp-controller="Simulation" asp-action="Index">
    var isAdmin = userTypeEnum == SolarEnergy.Models.UserType.Administrator;
    var isClient = userTypeEnum == SolarEnergy.Models.UserType.Client;

    // Active state para Início - ajustar conforme tipo de usuário
    var isHomeActive = false;
    if (isCompany)
    {
        // Para empresas: Início está ativo quando estiver na tela de Leads
        isHomeActive = (currentController == "Home" && currentAction == "Leads");
    }
    else if (isAdmin)
    {
        // Para admin: Início está ativo quando estiver no Index ou AdminDashboard
        isHomeActive = (currentController == "Home" && (currentAction == "Index" || currentAction == "AdminDashboard"));
    }
}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-solar-blue shadow-sm navbar-enhanced">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Solar Energy" class="navbar-logo me-2" />
                    <span class="fw-bold">SOLAR ENERGY</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto align-items-lg-center">
                        @if (isAuthenticated)
                        {
                            @if (isCompany)
                            {
                                <!-- Menu específico para EMPRESAS - Sem Painel, apenas funcionalidades essenciais -->
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(isHomeActive ? "active" : string.Empty)" asp-controller="Home" asp-action="Leads">
                                        <i class="fas fa-home me-2"></i>
                                        <span>Início</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "Simulation" ? "active" : string.Empty)" asp-controller="Home" asp-action="Simulation">
                                        <i class="fas fa-calculator me-2"></i>
                                        <span>Simulador</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "Evaluations" ? "active" : string.Empty)" asp-controller="Home" asp-action="Evaluations">
                                        <i class="fas fa-star me-2"></i>
                                        <span>Avaliações</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Reports" && currentAction == "MonthlyReport" ? "active" : string.Empty)" asp-controller="Reports" asp-action="MonthlyReport">
                                        <i class="fas fa-chart-bar me-2"></i>
                                        <span>Relatórios</span>
                                    </a>
                                </li>
                            }
                            else if (isAdmin)
                            {
                                <!-- Menu específico para ADMINISTRADORES -->
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(isHomeActive ? "active" : string.Empty)" asp-controller="Home" asp-action="AdminDashboard">
                                        <i class="fas fa-home me-2"></i>
                                        <span>Início</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "SearchCompanies" ? "active" : string.Empty)" asp-controller="Home" asp-action="SearchCompanies">
                                        <i class="fas fa-search me-2"></i>
                                        <span>Buscar Empresas</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentAction == "Dashboard" ? "active" : string.Empty)" asp-controller="Home" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>
                                        <span>Painel</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Quote" && currentAction == "MyQuotes" ? "active" : string.Empty)" asp-controller="Quote" asp-action="MyQuotes">
                                        <i class="fas fa-list me-2"></i>
                                        <span>Todos os Orçamentos</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "Simulation" ? "active" : string.Empty)" asp-controller="Home" asp-action="Simulation">
                                        <i class="fas fa-calculator me-2"></i>
                                        <span>Simulador</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "Evaluations" ? "active" : string.Empty)" asp-controller="Home" asp-action="Evaluations">
                                        <i class="fas fa-star me-2"></i>
                                        <span>Avaliações</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "Leads" ? "active" : string.Empty)" asp-controller="Home" asp-action="Leads">
                                        <i class="fas fa-users me-2"></i>
                                        <span>Leads</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "AdminDashboard" ? "active" : string.Empty)" asp-controller="Home" asp-action="AdminDashboard">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        <span>Admin</span>
                                    </a>
                                </li>
                            }
                            else if (isClient)
                            {
                                <!-- Menu específico para CLIENTES -->
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "SearchCompanies" ? "active" : string.Empty)" asp-controller="Home" asp-action="SearchCompanies">
                                        <i class="fas fa-search me-2"></i>
                                        <span>Buscar Empresas</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentAction == "Dashboard" ? "active" : string.Empty)" asp-controller="Home" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>
                                        <span>Painel</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Quote" && currentAction == "MyQuotes" ? "active" : string.Empty)" asp-controller="Quote" asp-action="MyQuotes">
                                        <i class="fas fa-file-invoice me-2"></i>
                                        <span>Meus Orçamentos</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-enhanced @(currentController == "Home" && currentAction == "Simulation" ? "active" : string.Empty)" asp-controller="Home" asp-action="Simulation">
                                        <i class="fas fa-calculator me-2"></i>
                                        <span>Simulador</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center nav-user-dropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-2 fs-5"></i>
                                    <span class="d-none d-lg-inline fw-semibold">@(User.Identity?.Name ?? "Usuário")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-enhanced">
                                    <li>
                                        <h6 class="dropdown-header d-flex align-items-center">
                                            @if (isCompany)
                                            {
                                                <i class="fas fa-building text-primary me-2"></i>
                                                <span>Empresa</span>
                                            }
                                            else if (isAdmin)
                                            {
                                                <i class="fas fa-shield-alt text-danger me-2"></i>
                                                <span>Administrador</span>
                                            }
                                            else
                                            {
                                                <i class="fas fa-user text-success me-2"></i>
                                                <span>Cliente</span>
                                            }
                                        </h6>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-controller="Profile" asp-action="Index">
                                            <i class="fas fa-user-edit me-3"></i>
                                            <span>Meu Perfil</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="#">
                                            <i class="fas fa-cog me-3"></i>
                                            <span>Configurações</span>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item d-flex align-items-center text-danger border-0 bg-transparent w-100">
                                                <i class="fas fa-sign-out-alt me-3"></i>
                                                <span>Sair</span>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-enhanced" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    <span>Entrar</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-solar-orange text-white ms-2 btn-register-enhanced" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>
                                    <span>Cadastrar</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Notificações -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
        </div>
    }
    
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <main>
        @RenderBody()
    </main>

    <footer class="bg-solar-blue text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-solar-panel me-2"></i>Solar Energy</h5>
                    <p class="mb-1">Energia limpa para um futuro sustentável</p>
                    <p class="text-muted small">&copy; @DateTime.Now.Year - Solar Energy. Todos os direitos reservados.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="mb-2">
                        <i class="fas fa-phone me-1"></i>(11) 9999-9999
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-envelope me-1"></i>contato@solarenergy.com.br
                    </div>
                    <div class="mb-3 footer-links">
                        <a class="text-white me-3" asp-controller="Home" asp-action="About"><i class="fas fa-info-circle me-1"></i>Sobre</a>
                        <a class="text-white" asp-controller="Home" asp-action="Contact"><i class="fas fa-envelope me-1"></i>Contato</a>
                    </div>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
</body>
</html>