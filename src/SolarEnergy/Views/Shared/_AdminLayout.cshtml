<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Solar Energy Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? string.Empty;
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? string.Empty;
}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-solar-blue shadow-sm navbar-enhanced">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Admin" asp-action="Dashboard">
                    <i class="fas fa-shield-alt me-2 text-admin-accent"></i>
                    <span class="fw-bold">ADMIN SOLAR ENERGY</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link admin-nav-link @(currentController == "Admin" && currentAction == "Dashboard" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link admin-nav-link @(currentController == "Admin" && currentAction == "Users" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Users">
                                <i class="fas fa-users me-2"></i>
                                Usuários
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link admin-nav-link @(currentController == "Admin" && currentAction == "Companies" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Companies">
                                <i class="fas fa-building me-2"></i>
                                Empresas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link admin-nav-link @(currentController == "Admin" && currentAction == "Reports" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Reports">
                                <i class="fas fa-chart-bar me-2"></i>
                                Relatórios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link admin-nav-link @(currentController == "Admin" && currentAction == "Reviews" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Reviews">
                                <i class="fas fa-star me-2"></i>
                                Avaliações
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link admin-nav-link @(currentController == "Admin" && currentAction == "Settings" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Settings">
                                <i class="fas fa-cog me-2"></i>
                                Configurações
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item me-3">
                            <a class="nav-link admin-nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-globe me-2"></i>
                                Ir para Site
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center admin-user-dropdown" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield me-2 fs-5"></i>
                                <span class="d-none d-lg-inline fw-semibold">@(User.Identity?.Name ?? "Administrador")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end admin-dropdown">
                                <li>
                                    <h6 class="dropdown-header d-flex align-items-center">
                                        <i class="fas fa-shield-alt text-admin-accent me-2"></i>
                                        <span>Administrador</span>
                                    </h6>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Profile" asp-action="Index">
                                        <i class="fas fa-user-edit me-3"></i>
                                        <span>Meu Perfil</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Admin" asp-action="Settings">
                                        <i class="fas fa-cog me-3"></i>
                                        <span>Configurações</span>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline w-100">
                                        <button type="submit" class="dropdown-item d-flex align-items-center text-danger border-0 bg-transparent w-100">
                                            <i class="fas fa-sign-out-alt me-3"></i>
                                            <span>Sair</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="admin-breadcrumb">
        <div class="container-fluid">
            <ol class="breadcrumb mb-0 py-2">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard", "Admin")" class="text-decoration-none">
                        <i class="fas fa-home me-1"></i>Admin
                    </a>
                </li>
                @if (ViewData["BreadcrumbItems"] != null)
                {
                    @foreach (var item in (List<dynamic>)ViewData["BreadcrumbItems"])
                    {
                        @if (item.IsActive)
                        {
                            <li class="breadcrumb-item active" aria-current="page">@item.Title</li>
                        }
                        else
                        {
                            <li class="breadcrumb-item">
                                <a href="@item.Url" class="text-decoration-none">@item.Title</a>
                            </li>
                        }
                    }
                }
                else
                {
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                }
            </ol>
        </div>
    </nav>
    
    <!-- Notificações -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mx-3 mt-3 admin-alert" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3 admin-alert" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show mx-3 mt-3 admin-alert" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mx-3 mt-3 admin-alert" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <main class="admin-main">
        @RenderBody()
    </main>

    <footer class="admin-footer bg-light border-top py-3 mt-5">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Solar Energy - Painel Administrativo &copy; @DateTime.Now.Year
                    </small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Último acesso: <span id="lastAccess">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                    </small>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
        
        // Update last access time
        setInterval(function() {
            document.getElementById('lastAccess').textContent = new Date().toLocaleString('pt-BR');
        }, 60000);
    </script>
</body>
</html>